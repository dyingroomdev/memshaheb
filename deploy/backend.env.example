# Copy to backend.env and adjust secrets before deploying
APP_NAME=memshaheb-backend
DATABASE_URL=postgresql+psycopg://admin:supersecurepassword@some-postgres:5432/mem_db
JWT_SECRET_KEY=replace-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=20160
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=change-this
MEDIA_STORAGE_BACKEND=local
MEDIA_LOCAL_ROOT=/app/backend/media
MEDIA_BASE_URL=https://backend.memshaheb.com/media
MEDIA_SIGNED_URL_EXPIRE_SECONDS=3600
CORS_ALLOW_ORIGINS=["https://memshaheb.com","https://backend.memshaheb.com"]
CORS_ALLOW_METHODS=["GET","POST","PUT","PATCH","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]
CORS_ALLOW_CREDENTIALS=true
